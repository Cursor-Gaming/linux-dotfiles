* {
    font: "JetBrains Mono 12";
    show-icons: true;
    lines: 10;
    display-run: "> ";
    display-drun: "> ";
    separator-style: "dashed";
    modi: "run,drun,ssh,window";

    background: #202020;
    foreground: #ff0000;
    selected-background: #808080;
    selected-foreground: #ff8080;
    input-foreground: #ffffff;
}

window {
    background-color: @background;
}

mainbox {
    background-color: @background;
}

inputbar {
    background-color: @background;
    text-color: @input-foreground;
}

listview {
    background-color: @background;
    spacing: 2px;
    fixed-height: true;
}

element {
    background-color: @background;
    text-color: @foreground;
}

element alternate {
    background-color: @background;
    text-color: @foreground;
}

element selected {
    background-color: @selected-background;
    text-color: @selected-foreground;
}

element-text {
    background-color: inherit;
    text-color: inherit;
}
